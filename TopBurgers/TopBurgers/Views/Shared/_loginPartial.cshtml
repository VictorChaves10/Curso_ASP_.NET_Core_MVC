@using Microsoft.AspNetCore.Identity



@inject SignInManager<IdentityUser> SignInManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">

        <div class="dropdown logout">
            <a class="" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-circle-user"></i>
            </a>

            <ul class="dropdown-menu p-2">
                <li>
                    <p class="dropdown-item">@User.Identity.Name</p>
                </li>
                <li>
                    <button type="submit" class="btn btn-link dropdown-item">
                        Sair
                    </button>
                </li>
            </ul>
        </div>
    </form>
}
else
{

    <div class="dropdown logout">
        <a class="" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa-solid fa-circle-user"></i>
        </a>

        <ul class="dropdown-menu p-2">
            <li>
                <a class=" dropdown-item p-2" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@string.Format("{0}{1}", Context.Request.Path, Context.Request.QueryString)">Login </a>
            </li>
            <li>
                <a class="p-2 dropdown-item" asp-controller="Account" asp-action="Register">Registrar</a>
            </li>
        </ul>
    </div>

}