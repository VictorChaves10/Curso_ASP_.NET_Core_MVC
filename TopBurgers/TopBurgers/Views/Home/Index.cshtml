@model HomeViewModel

<partial name="_Carousel" />


<section class="favorites container-fluid pe-1 ps-1">

    <div class="favorites-title d-flex gap-4">
        <h2 class="text-center">Os Favoritos</h2>
        <picture>
            <source media="(max-width:991px)" srcset="images/favorites/emoji-star-sm.svg">
             <img src="~/images/favorites/emoji-star.svg"/>
        </picture>
       
    </div>

    <div class="lanches-favoritos row row-cols-1 row-cols-sm-2 row-cols-md-4 gap-5 justify-content-center">

        @foreach (var item in Model.LanchesPreferidos)
        {
            <partial name="_LancheResumo" for="@item" />
        }

    </div>

    <aside class="container-fluid p-0 mt-3 ">

        <div>
            <img src="~/images/favorites/favorites-background.svg" width="100%"/>
        </div>

    </aside>

</section>




