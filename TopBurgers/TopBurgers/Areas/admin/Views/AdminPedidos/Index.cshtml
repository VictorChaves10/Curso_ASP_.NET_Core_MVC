@model ReflectionIT.Mvc.Paging.PagingList<TopBurgers.Models.Pedido>

@{
    ViewData["Title"] = "Pedido";
}

<section class="container py-3">

    <header class="text-center">
        <h1>Pedidos</h1>
    </header>

    <div>
        <form method="get" class=" form-inline">
            <div class="row p-3  gap-1">
                <input name="filter" class="form-control col" value="@Model.RouteValue["Filter"]" />
                <button type="submit" class="btn btn-info col-4 p-1">Procurar</button>
            </div>
       
        </form>
    </div>

    <div class="mt-2">
        <vc:pager paging-list="@Model"></vc:pager>
    </div>
    <p>Total de pedidos: @Model.TotalRecordCount</p>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sobrenome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complemento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cep)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoEnviado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sobrenome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Endereco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Complemento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cep)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PedidoEnviado)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PedidoId">Editar</a> |
                        <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.PedidoId">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   
</section>

