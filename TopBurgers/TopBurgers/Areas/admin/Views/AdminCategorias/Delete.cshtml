@model TopBurgers.Models.Categoria

@{
    ViewData["Title"] = "Categoria - Deletar";
}

<section>

</section>
<header class="text-center">
    <h1>Deletar Categoria</h1>
    <h3>Você tem certeza que deseja deletar uma categoria?</h3>
</header>

<div>

    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-primary">Voltar a lista</a>
    </form>

</div>
